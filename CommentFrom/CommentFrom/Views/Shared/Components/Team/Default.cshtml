@model List<Employee>

<section id="team" class="team-section pt-150">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-6">
                <div class="section-title text-center mb-60">
                    <h1>Meet The Team <img src="~/img/vectors/title-shape.svg" alt="" class="title-shape"> </h1>
                    <p>Sonumy eirmod tempor invidunt ut labore et dolore magna aliqum erat, sed diam voluptua .</p>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            @foreach (Employee item in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-10">
                    <div class="single-team">
                        <div class="image">
                            <img src="~/img/team/@item.Image">
                        </div>
                        <div class="content">
                            <h4>@item.Name</h4>
                            <p>@item.Position</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</section>
